<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.AboutUsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:clipToPadding="false">

        <!-- About Us Title -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/aboutUsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:textSize="24sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:textAlignment="center" />

        <!-- Logo ImageView -->
        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/logo"
            android:contentDescription="@string/logo_desc"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <!-- Introduction Text -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/introductionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to Our Clinic. We provide the best services for your pets with love and care."
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp"
            android:textAlignment="center" />

        <!-- Opening Time TextView -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/openingTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opening Time: 9:00 AM"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <!-- Closing Time TextView -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/closingTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Closing Time: 8:00 PM"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp" />

        <!-- Address TextView -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/addressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: 123 Main Street, City, Country"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp" />

        <!-- Button Group -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <!-- Phone Button -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/buttonPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:maxImageSize="40dp"
                android:src="@drawable/ic_phone"
                android:backgroundTint="@color/white"

                app:tint="@null" />

            <!-- Map Button -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/buttonMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/google_map_ic"

                app:maxImageSize="40dp"
                android:backgroundTint="@color/white"
                app:tint="@null"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
